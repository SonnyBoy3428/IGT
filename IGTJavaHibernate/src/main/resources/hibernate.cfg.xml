<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
    	<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/customerOrderManager</property>
        <property name="hibernate.connection.username">root</property>
    	<property name="show_sql">true</property>
    	<property name="hbm2ddl.auto">create</property>
    	<mapping class="hsma.ss2018.informatik.igt.kohler.javawithhibernate.model.Customer"/>
    	<mapping class="hsma.ss2018.informatik.igt.kohler.javawithhibernate.model.District"/>
    	<mapping class="hsma.ss2018.informatik.igt.kohler.javawithhibernate.model.Warehouse"/>
    	<mapping class="hsma.ss2018.informatik.igt.kohler.javawithhibernate.model.Order"/>
    	<mapping class="hsma.ss2018.informatik.igt.kohler.javawithhibernate.model.Item"/>
    	<mapping class="hsma.ss2018.informatik.igt.kohler.javawithhibernate.model.Stock"/>
    	<mapping class="hsma.ss2018.informatik.igt.kohler.javawithhibernate.model.Orderline"/>
    </session-factory>
</hibernate-configuration>
